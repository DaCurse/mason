BasedOnStyle: LLVM
IndentWidth: 4
TabWidth: 4
UseTab: Never
InsertNewlineAtEOF: true
KeepEmptyLinesAtEOF: true
AlignConsecutiveBitFields: true

AlignConsecutiveMacros:
  Enabled: true
  AcrossEmptyLines: true
  AcrossComments: true
  AlignCompound: true  
  PadOperators: true  
AlignEscapedNewlines: Left

ColumnLimit: 0
